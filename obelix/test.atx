potion esPar(x : intix) -> boolix {
    boolix sol = romano;
    if (x%2==0) {
        sol = galo;
    }
    return sol;
}

potion panoramix() -> intix {
    pot Punto {
        intix x = 2;
        intix y = 4;
    };

    pot Recta {
        Punto p1;
        Punto p2;
    };


    vectix<Recta>[2] rectas;

    forix (Recta r : rectas){
        tabellae(r.p1.x);
        tabellae(r.p2.y);
    }

    if (esPar(rectas[0].p1.x)) {
        tabellae(1);
    } else {
        tabellae(0);
    }

    return 0;
}
